{
  "compilerOptions": {
    "lib": ["es2020", "DOM"],
    "baseUrl": "./",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2020",
    "types": ["node"],
    "outDir": "./dist",
    "strict": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src", "test"]
}
